<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnButtonExercise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:text="@string/btnButtonExercise_text"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnCalculatorExercise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/btn_description"
            android:text="@string/btnCalculatorExercise"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnLayoutExercise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:text="@string/btnLayoutExercise_text"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnPlayTicTacToe"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:text="@string/btnPlayTicTacToe"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnMatch3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:text="@string/btnMatch3"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnPassingIntents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/btn_description"
            android:text="@string/btnPassingIntents"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnFragments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/btn_description"
            android:text="@string/btnFragments"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnMenuExercise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/btn_description"
            android:text="@string/btnMenuExercise"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnact9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/btn_description"
            android:text="Button"
            app:cornerRadius="30dp" />

        <Button
            android:id="@+id/btnact10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="28dp"
            android:autoSizeTextType="uniform"
            android:contentDescription="@string/btn_description"
            android:text="Button"
            app:cornerRadius="30dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>