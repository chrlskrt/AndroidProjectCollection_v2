<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LayoutExercise">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivInstagramLogo"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:contentDescription="@string/imageView_description"
                android:padding="3dp"
                app:srcCompat="@drawable/image_instagramlogo" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/scrollView_description">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/image_igStory1"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:contentDescription="@string/imageView_description"
                            app:srcCompat="@drawable/user_profile_1" />

                        <TextView
                            android:id="@+id/text_igStory1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/username1"
                            android:textAlignment="center"
                            android:textColor="#151515" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/image_igStory2"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:contentDescription="@string/imageView_description"
                            app:srcCompat="@drawable/user_profile_2" />

                        <TextView
                            android:id="@+id/text_igStory2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/username2"
                            android:textAlignment="center"
                            android:textColor="#151515" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/image_igStory3"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:contentDescription="@string/imageView_description"
                            app:srcCompat="@drawable/user_profile_3" />

                        <TextView
                            android:id="@+id/text_igStory3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/username3"
                            android:textAlignment="center"
                            android:textColor="#151515" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/image_igStory4"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:contentDescription="@string/imageView_description"
                            app:srcCompat="@drawable/user_profile_4" />

                        <TextView
                            android:id="@+id/text_igStory4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/username4"
                            android:textAlignment="center"
                            android:textColor="#151515" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/image_igStory5"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:contentDescription="@string/imageView_description"
                            app:srcCompat="@drawable/user_profile_5" />

                        <TextView
                            android:id="@+id/text_igStory5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/username5"
                            android:textAlignment="center"
                            android:textColor="#151515" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/image_igStory7"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:contentDescription="@string/imageView_description"
                            app:srcCompat="@drawable/user_profile_1" />

                        <TextView
                            android:id="@+id/text_igStory7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/username7"
                            android:textAlignment="center" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_igUpload1"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:contentDescription="@string/imageView_description"
                                android:padding="5dp"
                                app:srcCompat="@drawable/user_profile_2" />

                            <TextView
                                android:id="@+id/text_igUpload1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:text="@string/username2"
                                android:textAlignment="textStart"
                                android:textColor="#151515" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/image_igUploadC1"
                            android:layout_width="match_parent"
                            android:layout_height="231dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/imageView_description"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/image_igupload1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btnLike1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_like_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_like" />

                            <ImageButton
                                android:id="@+id/btnShare1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_share_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_share" />

                            <EditText
                                android:id="@+id/text_comment1"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="@string/comment_description"
                                android:autofillHints="" />

                            <ImageButton
                                android:id="@+id/btnBookmark1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_bookmark_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_bookmark" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_igUpload2"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:contentDescription="@string/imageView_description"
                                android:padding="5dp"
                                app:srcCompat="@drawable/user_profile_3" />

                            <TextView
                                android:id="@+id/text_igUpload2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:text="@string/username3"
                                android:textAlignment="textStart"
                                android:textColor="#151515" />

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/image_igUploadC2"
                            android:layout_width="match_parent"
                            android:layout_height="355dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/imageView_description"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/image_igupload4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btnLike2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_like_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_like" />

                            <ImageButton
                                android:id="@+id/btnShare2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_share_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_share" />

                            <EditText
                                android:id="@+id/text_comment2"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="@string/comment_description"
                                android:autofillHints="" />

                            <ImageButton
                                android:id="@+id/btnBookmark2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_bookmark_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_bookmark" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_igUpload3"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:contentDescription="@string/imageView_description"
                                android:padding="5dp"
                                app:srcCompat="@drawable/user_profile_4" />

                            <TextView
                                android:id="@+id/text_igUpload3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="15dp"
                                android:text="@string/username4"
                                android:textAlignment="textStart"
                                android:textColor="#151515" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/image_igUploadC3"
                            android:layout_width="match_parent"
                            android:layout_height="312dp"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/imageView_description"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/image_igupload3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btnLike3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_like_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_like" />

                            <ImageButton
                                android:id="@+id/btnShare3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_share_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_share" />

                            <EditText
                                android:id="@+id/text_comment3"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="@string/comment_description"
                                android:autofillHints="" />

                            <ImageButton
                                android:id="@+id/btnBookmark3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:backgroundTint="#00FFFFFF"
                                android:contentDescription="@string/btn_bookmark_description"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/button_bookmark" />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>